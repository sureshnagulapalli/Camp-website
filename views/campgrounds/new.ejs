<% include ../partials/header %>

<div class="container">
	<div class="">
		<h1 style="text-align: center;">Add new campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campground" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="newCampground[name]" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="newCampground[price]" value="0.01" min="0.01" step="0.01" >
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newCampground[image]" placeholder="image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newCampground[description]" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campground">Go Back</a>
		</div>
	</div>
</div>




<% include ../partials/footer %>