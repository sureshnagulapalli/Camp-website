<% include ../partials/header %>

<div class="container">
	<div class="">
		<h1 style="text-align: center;">Edit campground <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="updateCampground[name]" value="<%= campground.name %>" >
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="updateCampground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="updateCampground[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="updateCampground[description]" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campground">Go Back</a>
		</div>
	</div>
</div>




<% include ../partials/footer %>